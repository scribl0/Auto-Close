{
    "manifest_version": 3,
    "name": "Auto Close",
    "version": "3.0",
    "description": "Closes new tabs automaticallyâ€”so handy for evil redirects! Made by Scribl & Vamperlium.",
    "permissions": [
      "activeTab",
      "tabs",
      "offscreen",
      "notifications",
      "storage"           
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "toggleCmd": {
        "suggested_key": {
          "default": "Ctrl+Shift+K",
          "mac":     "Command+Shift+K"
        },
        "description": "Toggle on/off"
      }
    },
    "icons": {
      "128": "icons/icon.png"
    }
  }
  